---
const baseUrl = import.meta.env.BASE_URL;
---

<div class="background">
    <div class="background-pattern"></div>
    <section>
        <h1>Annas<br/>Katzenbetreuung</h1>
        <p class="subtitle">Mobiles Katzensitting in Berlin</p>
        <p>
            Ich bin Gaby Annas. Ich betreue Katzen direkt bei Ihnen zu Hause
            – und das schon seit über 10 Jahren.
        </p>
    </section>
    <video width="1280" height="720" autoplay muted loop playsinline>
        <source src=`${baseUrl}/cat-background-2.webm` type="video/webm">
        <source src=`${baseUrl}/cat-background-2.mp4` type="video/mp4">
    </video>
</div>
<a href="#kontakt" type="button">Kontakt</a>

<style lang="scss">
    .background {
        overflow: hidden;
        background: radial-gradient(
            circle at 100% -10%,
            var(--gradient)
        );
        animation: 1.5s ease-out 0s 1 open;
        transform-origin: 50% 0;
        clip-path: inset(0 0% round 0 0 30px 30px);
        position: relative;
    }

    .background-pattern {
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 70%;
        background: radial-gradient(
            rgb(var(--color-secondary)) 20%, transparent 20%, transparent 80%, rgb(var(--color-secondary)) 80%
        );
        background-size: 8px 8px;
        background-position: -1rem -1rem;
        mask-image: radial-gradient(at top right, rgba(0, 0, 0, 1) 0, rgba(0, 0, 0, 0) 90%);
        opacity: .15;
    }

    section {
        margin-top: 4rem;
    }

	video {
        display: block;
		width: 100%;
		height: auto;
        min-width: 600px;
        max-width: var(--content-max-width);
        margin: -50px auto 0 auto;
        mix-blend-mode: multiply;
        mask-image: linear-gradient(to top, black 70%, transparent);
	}

    h1 {
		background: linear-gradient(
            to bottom right,
            rgb(var(--color-tertiary)),
            rgb(var(--color-secondary))
        );
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
        filter:
            contrast(1.5)
            brightness(.85)
            drop-shadow(2px 2px 2px rgba(255, 255, 255, .4))
            drop-shadow(0 0 8px rgba(255, 255, 255, .2));
    }

    .subtitle {
        font-size: 1.2rem;
    }

    p {
        max-width: 500px;
        transform: translateZ(0);
    }

    a[type="button"] {
        display: block;
        width: max-content;
        margin: auto;
        margin-top: -20px;
        padding: .5em 2em;
        color: white;
		background: radial-gradient(
            at 20% 0%,
            rgb(var(--color-primary)),
            rgb(var(--color-secondary))
        );
        border-radius: 100px;
        box-shadow: -6px -6px 14px rgba(255, 255, 255, .7),
                    -6px -6px 10px rgba(255, 255, 255, .5),
                    6px 6px 8px rgba(255, 255, 255, .075),
                    6px 6px 10px rgba(0, 0, 0, .15);
        text-decoration: none;
        font-size: 1.3rem;
        transform-style: preserve-3d;

        &::before {
            content: "";
            position: absolute;
            inset: -8px;
            background: rgb(var(--color-background));
            border-radius: inherit;
            transform: translateZ(-1px);
        }
    }

    @keyframes open {
        0% {
            clip-path: inset(0 100% round 30px);
            transform: scale(0.9);
            opacity: 0;
        }
        60% {
            clip-path: inset(0 0% round 30px);
            transform: scale(1.025);
            opacity: 1;
        }
        100% {
            transform: scale(1);
        }
    }
</style>