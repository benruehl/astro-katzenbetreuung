---
import '@fontsource-variable/comfortaa';
import '@fontsource/poppins';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Annas Katzenbetreuung</title>
	</head>
	<body>
		<slot/>
	</body>
</html>

<style is:global>
    :root {
		--color-text: 114, 76, 97;
		--color-text-soft: 145, 90, 107;
		--color-primary: 206, 161, 139;
		--color-secondary: 146, 57, 106;
		--color-tertiary: 214, 133, 113;
		--color-neutral: 255, 255, 255;
		--color-background: 243, 240, 235;
		--gradient: #d68571, #e2ac8d, #edd2b3, #fdf5e2, #eaedef;
		--content-max-width: 1280px;
    }

	html {
  		font-family: 'Poppins', sans-serif;
		color: rgb(var(--color-text));
		scroll-behavior: smooth;
		font-size: 18px;
		line-height: 1.5;
		background: rgb(var(--color-background));

		@media (max-width: $sm) {
			font-size: 16px;
		}
	}

	html,
	body {
		max-width: 100%;
		overflow-x: hidden;
        margin: 0;
	}

	main {
        overflow: hidden;
	}

    section {
        margin: auto;
        width: var(--content-max-width);
        max-width: calc(100% - 2rem);
    }
	
	h1 {
		font-family: 'Comfortaa Variable', system-ui;
		font-size: min(4rem, 10vw);
		font-weight: 400;
		line-height: 1.1;
		letter-spacing: -0.05em;
		margin-bottom: 1em;
		color: rgb(var(--color-secondary));
	}

	h2 {
		font-family: 'Comfortaa Variable', system-ui;
		font-size: 1rem;
		font-weight: 400;
		line-height: 1.1;
		margin-bottom: -1.5em;
		margin-top: 3em;
		color: rgb(var(--color-secondary));
	}

	h3 {
		font-family: 'Comfortaa Variable', system-ui;
		font-size: 1.8rem;
		font-weight: 600;
		line-height: 1.3;
		margin-bottom: .75em;
		letter-spacing: -0.02em;
	}

	figure {
        margin: 0;
	}

	.visually-hidden {
		clip: rect(0 0 0 0);
		clip-path: inset(50%);
		height: 1px;
		overflow: hidden;
		position: absolute;
		white-space: nowrap;
		width: 1px;
	}
</style>